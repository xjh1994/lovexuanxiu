<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:progressDrawable="@drawable/rating_red_large"
        android:rating="0"
        android:stepSize="1" />

    <me.gujun.android.taggroup.TagGroup
        android:id="@+id/tag_group"
        style="@style/TagGroup.Large" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="说说这门课怎么样"
        android:inputType="textCapSentences"
        android:paddingLeft="6dp"
        android:textCursorDrawable="@drawable/edittext_cursor_blue"
        app:met_baseColor="@color/primarytextcolor"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText=""
        app:met_maxCharacters="140"
        app:met_primaryColor="@color/secondarytext"
        app:met_textColorHint="@color/secondarytext" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/primarycolor"
        android:text="提交评论" />

</LinearLayout>