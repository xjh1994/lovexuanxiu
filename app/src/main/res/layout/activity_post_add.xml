<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/post_cate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="问答"
            android:textColor="@color/primarycolor"
            android:textSize="18sp"
            tools:text="吐槽" />
    </LinearLayout>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="标题"
        android:inputType="textCapWords"
        android:paddingLeft="6dp"
        android:textCursorDrawable="@drawable/edittext_cursor_blue"
        app:met_baseColor="@color/primarytextcolor"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText=""
        app:met_maxCharacters="140"
        app:met_primaryColor="@color/secondarytext"
        app:met_singleLineEllipsis="true"
        app:met_textColorHint="@color/secondarytext" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="top"
        android:hint="内容"
        android:inputType="textCapWords"
        android:paddingLeft="6dp"
        android:textCursorDrawable="@drawable/edittext_cursor_blue"
        app:met_baseColor="@color/primarytextcolor"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText=""
        app:met_maxCharacters="9999"
        app:met_primaryColor="@color/secondarytext"
        app:met_textColorHint="@color/secondarytext" />

</LinearLayout>