<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="爱选修"
        android:textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/appname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        app:border_color="#fff"
        app:border_width="2dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:hint="手机号"
        android:inputType="number"
        android:paddingLeft="6dp"
        android:textCursorDrawable="@drawable/edittext_cursor_blue"
        app:met_baseColor="@color/primarytextcolor"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText=""
        app:met_maxCharacters="11"
        app:met_primaryColor="@color/secondarytext"
        app:met_singleLineEllipsis="true"
        app:met_textColorHint="@color/secondarytext" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingLeft="6dp"
        android:textCursorDrawable="@drawable/edittext_cursor_blue"
        app:met_baseColor="@color/primarytextcolor"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText=""
        app:met_maxCharacters="20"
        app:met_primaryColor="@color/secondarytext"
        app:met_singleLineEllipsis="true"
        app:met_textColorHint="@color/secondarytext" />

    <LinearLayout
        android:id="@+id/layout_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/password"
        android:layout_below="@id/password"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/verify"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="验证码"
            android:inputType="number"
            android:paddingLeft="6dp"
            android:textCursorDrawable="@drawable/edittext_cursor_blue"
            app:met_baseColor="@color/primarytextcolor"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText=""
            app:met_maxCharacters="6"
            app:met_primaryColor="@color/secondarytext"
            app:met_singleLineEllipsis="true"
            app:met_textColorHint="@color/secondarytext" />

        <com.gc.materialdesign.views.ButtonFlat
            android:layout_gravity="center"
            android:id="@+id/send_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/primarycolor"
            android:text="@string/send_verify_code" />

    </LinearLayout>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/register"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_verify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/primarycolor"
        android:text="@string/register" />

</RelativeLayout>