<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="错误描述：" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appname"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="上课时间改了/老师换了/教室换了/..."
        android:inputType="textCapSentences"
        android:paddingLeft="6dp"
        android:textCursorDrawable="@drawable/edittext_cursor_blue"
        app:met_baseColor="@color/primarytextcolor"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText=""
        app:met_maxCharacters="140"
        app:met_primaryColor="@color/secondarytext"
        app:met_textColorHint="@color/secondarytext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="正确信息：" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/correct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appname"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="正确信息"
        android:inputType="textCapSentences"
        android:paddingLeft="6dp"
        android:textCursorDrawable="@drawable/edittext_cursor_blue"
        app:met_baseColor="@color/primarytextcolor"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText=""
        app:met_maxCharacters="140"
        app:met_primaryColor="@color/secondarytext"
        app:met_textColorHint="@color/secondarytext" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/primarycolor"
        android:text="提交" />

</LinearLayout>